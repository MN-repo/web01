- content_for :title, "JMP: Register a New Number"
- content_for :head do
	scss:
		body > a {
			display: block;
			float: left;
			width: calc(40% - 4em);
			min-width: 10em;
			clear: left;
			margin-top: 2em;
			font-size: 1.5em;
			text-align: center;
			text-decoration: none;
			padding: 1em;
		}

		body > a:nth-of-type(2n) {
			float: right;
			clear: right;
		}

		@media (max-width: 50rem) {
			body > a {
				font-size: 6vw;
				width: calc(80% - 4em);
				float: none;
				margin: auto;
			}

			body > a:nth-of-type(2n) {
				float: none;
			}

			body > a:last-of-type {
				position: static;
			}
		}

		@media (hover: hover) {
			body > a:hover {
				background-color: #ccc;
			}
		}

		a[href^="register/"] {
			background-repeat: no-repeat;
			background-size: 3em;
			background-position: 1em center;
			padding-left: 4em;
			min-height: 3em;
			display: grid;
			place-content: center;
		}

		a[href^="register/jabber/new"] {
			background-image: url(static/getjid.svg);
		}

		a[href^="register/jabber"] {
			background-image: url(static/havejid.svg);
		}

		a[href^="register/snikket"] {
			background-image: url(static/snikket.svg);
		}

		a[href^="register/matrix"] {
			background-image: url(static/matrix.svg);
		}

