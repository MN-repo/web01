	meta name="twitter:image" content="https://jmp.chat/static/card.webp"
	meta name="twitter:site" content="@JMP_chat"

	script type="application/ld+json"
		| {
			"@context": "https://schema.org",
			"@type": "Organization",
			"url": "https://jmp.chat",
			"logo": "https://jmp.chat/static/jmp.svg",
